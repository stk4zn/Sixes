<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ListView
        android:id="@+id/sixesOfflineCreatePlayerList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
    </ListView>

    <RelativeLayout
        android:id="@+id/sixesOfflineCreateRightHalf"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/sixesOfflineCreateTopRow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@+id/sixesOfflineCreateNumPlayersText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:gravity="center"
                android:text="Players: "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/sixesOfflineCreateNumPlayersSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixesOfflineCreateBottomRow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="20dp" >

            <Button
                android:id="@+id/sixesOfflineCreateBackButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight=".3"
                android:gravity="center"
                android:text="Back " />

            <Button
                android:id="@+id/sixesOfflineCreateStartButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight=".3"
                android:gravity="center" 
                android:text="Start " />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>